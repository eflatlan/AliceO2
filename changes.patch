+         branchLG = o2::emcal::Channel::getBranchIndexFromHwAddress(addressLG),
+         branchHG = o2::emcal::Channel::getBranchIndexFromHwAddress(addressHG),
+         chipLG = o2::emcal::Channel::getAltroIndexFromHwAddress(addressLG),
