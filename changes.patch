+  AlignRecordTask(std::shared_ptr<DataRequest> dataRequest, std::shared_ptr<base::GRPGeomRequest> ccdbRequest, bool useMC = true)
+    : mDataRequest(dataRequest), mCCDBRequest(ccdbRequest), mUseMC(useMC) {}
